{% extends "modal.jinja" %}
{% block modal %}
    <form action="/image" method="post" enctype="multipart/form-data">
        <!-- Image Upload Button -->
        <div>
            <p>Upload Image</p>
            <input type="file" name="image" accept="image/*" />
        </div>
        <!-- Details Form -->
        <div class="flex flex-col gap-4 px-8">
            <!-- <img> -->
            <div>
                <label for="input-title">Title</label>
                <input type="text" id="input-title" name="title" required />
            </div>
            <div>
                <label for="input-artist">Artist</label>
                <input type="text" id="input-artist" name="artist" />
            </div>
            <div>
                <input type="checkbox" id="checkbox-dark" value="on" name="dark" />
                <label for="checkbox-dark">Use dark background</label>
            </div>
            <button id="upload-button" type="submit">Upload</button>
        </div>
    </form>
{% endblock %}
