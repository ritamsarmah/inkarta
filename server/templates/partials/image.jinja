{% extends "modal.jinja" %}
{% block modal %}
    <div>
        <style>
            me {
                display: flex;
                flex-direction: column;
                text-align: center;
                align-items: center;
                justify-content: center
                gap: 1rem;
            }

            img {
                width: 24rem;
                height: 24rem;
                object-fit: contain;
            }
        </style>
        <!-- Image -->
        <img src="{{ image.src }}" alt="{{ image.title }}">
        <!-- Description -->
        <div>
            <style>
                me p[n1] {
                    font-weight: 500;
                    font-size: 2rem;
                    color: black;
                }

                me p[n2] {
                    font-weight: 300;
                    color: var(--gray-500);
                }

                @media dark {
                    me p[n1] { color: white; }
                }
            </style>
            <p [n1]>{{ image.title }}</p>
            <p [n2]>{{ image.artist }}</p>
        </div>
        <div>
            <style>
                me {
                    display: flex;
                    gap: 1rem;
                    margin-top: 1rem;
                }

                me button {
                    border-radius: 0.375rem;
                    border: 1px solid var(--blue-600);
                    padding-top: 0.75rem;
                    padding-bottom: 0.75rem;
                    padding-left: 1.25rem;
                    padding-right: 1.25rem;
                    color: white;
                    background-color: var(--blue-600);
                }

                me button:not(:disabled):hover { background-color: var(--blue-700); }
                me button:disabled {
                    background-color: transparent;
                    border: 1px solid var(--gray-400);
                    color: var(--gray-400);
                    cursor: default;
                }

            </style>
            <button hx-put="/image/next/{{ image.id }}" hx-swap="outerHTML">
                Select Image
            </button>
            <button hx-delete="/image/{{ image.id }}" hx-target="#modal" hx-swap="delete">
                <style>
                    me {
                        padding: 0.75rem !important;
                        background-color: red !important;
                        border-color: red !important;
                    }

                    me svg { width: 1.25rem; height: 1.25rem; }
                </style>
                <svg xmlns="http://www.w3.org/2000/svg"
                     fill="none"
                     viewBox="0 0 24 24"
                     stroke-width="1.5"
                     stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                </svg>
            </button>
        </div>
    </div>
{% endblock %}
