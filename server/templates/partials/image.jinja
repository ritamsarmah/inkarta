{% extends "modal.jinja" %}
{% block modal %}
    <div>
        <style>
            me {
                display: flex;
                flex-direction: column;
                text-align: center;
                align-items: center;
                justify-content: center
                gap: 1rem;
            }

            img {
                width: 24rem;
                height: 24rem;
                object-fit: contain;
            }
        </style>
        <img src="{{ image.src }}" alt="{{ image.title }}">
        <div>
            <style>
                me p[n1] {
                    font-weight: 500;
                    font-size: 1.125rem;
                    color: black;
                }

                me p[n2] {
                    font-weight: 300;
                    color: var(--gray-500);
                }

                @media dark {
                    me p[n1] { color: white; }
                }
            </style>

            <p[n1]>{{ image.title }}</p>
            <p[n2]>{{ image.artist }}</p>
        </div>
        <div>
            <style>
                me {
                    display: flex;
                    gap: 1rem;
                    margin-top: 1rem;
                }
            </style>
            <form method="put" action="/image/next">
                <input type="hidden" name="id" value="{{ image.id }}">
                <button id="next-button" class="rounded-md py-3 px-5 text-white bg-blue-600 hover:bg-blue-700">
                    <style>
                        me {
                          border-radius: 0.375rem;
                          padding-top: 0.75rem;
                          padding-bottom: 0.75rem;
                          padding-left: 1.25rem;
                          padding-right: 1.25rem;
                          color: white;
                          background-color: var(--blue-600);
                        }

                        me:hover { background-color: var(--blue-700); }
                    </style>

                    Select Image
                </button>
            </form>
            <span x-init
                  @ajax:before="confirm('Are you sure you want to permanently delete this image?') || $event.preventDefault()">
                <form method="delete"
                      action="/image/{{ image.id }}"
                      @submit="modal = false">
                    <button id="delete-button"
                            class="rounded-md p-3 text-white bg-red-600 hover:bg-red-700">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             fill="none"
                             viewBox="0 0 24 24"
                             stroke-width="1.5"
                             stroke="currentColor"
                             class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                        </svg>
                    </button>
                </form>
            </span>
        </div>
    </div>
{% endblock %}
