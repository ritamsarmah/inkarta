{% extends "base.jinja" %}
{% block body %}
    <div>
        <nav>
            <style>
                me {
                    display: flex;
                    gap: 2rem;
                    align-items: center;
                    justify-content: space-between;
                }

                me button {
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    width: 2.5rem;
                    height: 2.5rem;
                    color: black;
                    border-radius: 50%;
                    padding: 0.25rem;

                    &:hover { background-color: var(--gray-100); }

                    & svg { width: 1.5rem; height: 1.5rem; }

                    @media dark {
                        & { color: white; }
                        &:hover { background-color: var(--gray-800); }
                    }
                }
            </style>
            <!-- Frame Configuration Button -->
            <button hx-get="/ui/frame" hx-target="body" hx-swap="beforeend">
                <svg xmlns="http://www.w3.org/2000/svg"
                     fill="none"
                     viewBox="0 0 24 24"
                     stroke-width="1.5"
                     stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 7.125C2.25 6.504 2.754 6 3.375 6h6c.621 0 1.125.504 1.125 1.125v3.75c0 .621-.504 1.125-1.125 1.125h-6a1.125 1.125 0 0 1-1.125-1.125v-3.75ZM14.25 8.625c0-.621.504-1.125 1.125-1.125h5.25c.621 0 1.125.504 1.125 1.125v8.25c0 .621-.504 1.125-1.125 1.125h-5.25a1.125 1.125 0 0 1-1.125-1.125v-8.25ZM3.75 16.125c0-.621.504-1.125 1.125-1.125h5.25c.621 0 1.125.504 1.125 1.125v2.25c0 .621-.504 1.125-1.125 1.125h-5.25a1.125 1.125 0 0 1-1.125-1.125v-2.25Z" />
                </svg>
            </button>
            <!-- Title -->
            <h1 class="title">Gallery</h1>
            <!-- Upload Image Button -->
            <button hx-get="/ui/upload" hx-target="body" hx-swap="beforeend">
                <svg xmlns="http://www.w3.org/2000/svg"
                     fill="none"
                     viewBox="0 0 24 24"
                     stroke-width="1.5"
                     stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>
            </button>
        </nav>
        <!-- Image Gallery -->
        <main>
            <style>me { margin-top: 2rem; }</style>
            <div>
                <style>
                    me { display: grid; gap: 1rem; }
                    @media sm { me { grid-template-columns: repeat(2, minmax(0, 1fr)); } }
                    @media md { me { grid-template-columns: repeat(3, minmax(0, 1fr)); } }
                    @media lg { me { grid-template-columns: repeat(4, minmax(0, 1fr)); } }
                </style>
                {% for thumbnail in thumbnails %}
                    <a hx-get="{{ thumbnail.href }}" hx-target="body" hx-swap="beforeend">
                        <style>
                            me {
                                display: flex;
                                flex-direction: column;
                                align-items: center;
                                justify-content: center;
                                text-align: center;
                                padding: 1rem;
                                border-radius: 0.375rem;
                                cursor: pointer;
                                text-decoration: none;
                                color: var(--gray-900);
                            }
                            me > * + * { margin-top: 0.75rem; }
                            @media dark { me { color: white; } }

                            me:hover { background-color: var(--gray-100); }
                            @media dark { me:hover { background-color: var(--gray-800); } }

                            me img { width: 16rem; height: 16rem; object-fit: contain; }
                            me p[n1] { font-weight: 500; margin-bottom: 0.25rem; }
                            me p[n2] { font-weight: 300; color: var(--gray-400); }
                        </style>
                        <img src="{{ thumbnail.src }}" />
                        <div>
                            <p n1>{{ thumbnail.title }}</p>
                            <p n2>{{ thumbnail.artist }}</p>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </main>
    </div>
    {% include "partials/upload.jinja" %}
{% endblock %}
