{% extends "layout.jinja" %}
{% block body %}
<nav class="flex gap-8 items-center justify-between">
    <a href="/x/settings"
        class="flex items-center justify-center size-10 text-black dark:text-white rounded-full hover:bg-zinc-100 hover:dark:bg-zinc-900">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
            stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round"
                d="M10.5 6h9.75M10.5 6a1.5 1.5 0 1 1-3 0m3 0a1.5 1.5 0 1 0-3 0M3.75 6H7.5m3 12h9.75m-9.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-3.75 0H7.5m9-6h3.75m-3.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-9.75 0h9.75" />
        </svg>
    </a>
    <h1 class="text-2xl font-thin tracking-[0.3rem] uppercase pt-0.5">
        Gallery
    </h1>
    <button
        class="flex items-center justify-center size-10 text-black dark:text-white rounded-full hover:bg-zinc-100 hover:dark:bg-zinc-900"
        x-init @click="window.showOpenFilePicker()">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
            stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
    </button>
</nav>
<main class="mt-8">
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        {% for thumbnail in thumbnails %}
            <a href={{ thumbnail.href }}
                class="space-y-3 p-4 items-center justify-center text-center rounded-md hover:bg-zinc-100 hover:dark:bg-zinc-900 cursor-pointer">
                <img class="h-full rounded-md" src={{ thumbnail.src }} />
                <div>
                    <p class="font-medium">{{ thumbnail.title }}</p>
                    <p class="font-light text-zinc-500">{{ thumbnail.artist }}</p>
                </div>
            </a>
        {% endfor %}
    </div>
</main>
{% endblock %}
